{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["esnext"],
    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,

    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@factory/*": ["src/factory/*"],
      "@globals/*": ["src/globals/*"],
      "@memory/*": ["src/memory/*"],
      "@pathfinder/*": ["src/pathfinder/*"],
      "@utils/*": ["src/utils/*"],
      "@wrappers/*": ["src/wrappers/*"],
      "@test-utils/*": ["test/utils/*"]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
