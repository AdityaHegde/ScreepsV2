{
  "compilerOptions": {
    "target": "es2020",
    "types": ["screeps", "node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,

    "baseUrl": ".",
    "paths": {
      "@memory/*": ["src/memory/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
